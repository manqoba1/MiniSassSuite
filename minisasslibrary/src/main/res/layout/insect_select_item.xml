<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pic"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_margin="10dp"
    app:cardElevation="@dimen/mon_divider">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/INSC_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/mon_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/othermayfly13" />


        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_400"
            android:padding="@dimen/mon_padding">

            <TextView
                android:id="@+id/INSC_more"
                style="@style/TextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mon_padding"
                android:elevation="@dimen/padding_top_10"
                android:text="... see more"
                android:textColor="@color/white"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/INSC_box"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:buttonTint="@color/white"
                android:checked="false"
                android:elevation="@dimen/mon_margin"
                android:text="@string/insect_selected"
                android:textColor="@color/white" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
