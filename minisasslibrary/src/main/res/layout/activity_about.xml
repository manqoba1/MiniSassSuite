<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.sifiso.codetribe.minisasslibrary.activities.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/teamLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/xborder"
                android:elevation="4dp"
                android:padding="@dimen/padding_top_10"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/mon_hero_height_large_200"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView2"
                    android:text="@string/about_minisass" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/partnersLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/teamLayout"
                android:layout_margin="5dp"
                android:background="@drawable/xborder"
                android:elevation="4dp"
                android:padding="@dimen/padding_top_10"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView11"
                    style="@style/Title3TextStyleBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="The App"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView11"
                    android:text="@string/the_app" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mon_hero_height_large_200"
                    android:layout_below="@+id/textView20"
                    android:src="@drawable/logo_dst" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView3"
                    android:text="@string/dti_info" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sponsorsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/partnersLayout"
                android:layout_margin="5dp"
                android:background="@drawable/xborder"
                android:elevation="4dp"
                android:padding="@dimen/padding_top_10"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView12"
                    style="@style/Title3TextStyleBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Development"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView12"
                    android:layout_marginBottom="@dimen/padding_top_10"
                    android:text="@string/development_info" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView22"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="@dimen/mon_hero_height_large_200"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sifiso_pic" />

                        <TextView
                            style="@style/TextStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_top_10"
                            android:text="Sifiso Mtshweni" />

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="@dimen/mon_hero_height_large_200"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sasa_pic" />

                        <TextView
                            style="@style/TextStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_top_10"
                            android:text="Kurisani Chauke" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_top_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="@dimen/mon_hero_height_large_200"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chris_pic" />

                        <TextView
                            style="@style/TextStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_top_10"
                            android:text="Chris Skosana" />
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="@dimen/mon_hero_height_large_200"
                            android:scaleType="centerCrop"
                            android:src="@drawable/aubreymlb" />

                        <TextView
                            style="@style/TextStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_top_10"
                            android:text="Aubrey Malabie" />

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sponsor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sponsorsLayout"
                android:layout_margin="5dp"
                android:background="@drawable/xborder"
                android:elevation="4dp"
                android:padding="@dimen/padding_top_10">
                <RelativeLayout
                    android:id="@+id/layoutx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView14"
                    style="@style/Title3TextStyleBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Partners: Swipe right to see all partners"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />
                </RelativeLayout>
                <HorizontalScrollView
                    android:layout_below="@+id/layoutx"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/CAM_imageContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="400dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/logo_variation" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="400dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/wessalogo" />
                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="400dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/wrc_logo" />
                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="400dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/mlab_logo" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="400dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/codetribe_logo" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="400dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/dwas_logo_rgb" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="400dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/logo_dst" />


                    </LinearLayout>
                </HorizontalScrollView>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
