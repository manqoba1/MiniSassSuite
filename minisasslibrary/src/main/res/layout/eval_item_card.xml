<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mon_padding"
    app:cardCornerRadius="@dimen/mon_divider"
    app:cardElevation="@dimen/mon_padding">

    <RelativeLayout
        android:id="@+id/NN_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mon_padding">

        <include
            android:id="@+id/evalIncludetop"
            layout="@layout/eval_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/evalOptional"
            layout="@layout/eval_optional"
            android:layout_below="@id/evalIncludetop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/eval_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/evalOptional"
            android:layout_marginTop="@dimen/mon_padding" />
    </RelativeLayout>

</android.support.v7.widget.CardView>